<?php
function Welcome() {
	echo "Welcome to PHP Course <br>";
}

Welcome(); echo "<hr>";
function Addition() {
	$a = 5;
	$b = 2;
	$c = $a + $b;
	echo "Addition is {$c}<br>";
}
Addition();
echo "<hr>";
function Addition_Using_Function_Parameter($x, $y) {
	$Result = $x + $y;
echo "Addition Using Function Parameter is: {$Result}";
} 

Addition_Using_Function_Parameter(130, 4);
Addition_Using_Function_Parameter(50, 80);
Addition_Using_Function_Parameter(70, 60);
Addition_Using_Function_Parameter(70, 45);
Addition_Using_Function_Parameter(70, 34);
Addition_Using_Function_Parameter(89, 23);
echo "<hr>";

function Addition_using_Return($p, $q) {
	$f = $p + $q;
	return $f;
}
$total = Addition_using_Return(50, 60);
$total1 = Addition_using_Return(90, 180);
echo $total1;



?>



